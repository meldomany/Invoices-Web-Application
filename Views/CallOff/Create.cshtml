@model InvoiceApp.Models.ViewModels.CallOffVM

<h3 class="text-center mb-4">Create a new call off</h3>
<form asp-action="Create" method="post">
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CallOff.CallOffNumber"></label>
                        <input asp-for="CallOff.CallOffNumber" class="form-control" />
                        <span asp-validation-for="CallOff.CallOffNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CallOff.Description"></label>
                        <input asp-for="CallOff.Description" class="form-control" />
                        <span asp-validation-for="CallOff.Description" class="text-danger"></span>
                    </div>
                 </div>
            </div>
        </div>

        @for(int i = 0; i < Model.CallOffItems.Count(); i++)
        {
            <div class="col-md-12">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col">
                                <label asp-for="@Model.CallOffItems[i].Quantity"></label>
                                <input asp-for="@Model.CallOffItems[i].Quantity" class="form-control" />
                                <span asp-validation-for="@Model.CallOffItems[i].Quantity" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="@Model.CallOffItems[i].ItemId"></label>
                                <select asp-for="@Model.CallOffItems[i].ItemId" asp-items="@Model.ItemsSelectList" class="js-example-basic-single form-control">
                                    <option disabled selected>--Select Item--</option>
                                </select>
                                <span asp-validation-for="@Model.CallOffItems[i].ItemId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary btn-block mt-5">Create</button>
</form>


@section Scripts{

    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });
    </script>
}