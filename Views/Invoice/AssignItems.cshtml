@model InvoiceApp.Models.ViewModels.InvoiceCallOffItemsVM
<form asp-action="AssignItems" method="post">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Assign items for invoice number: @Model.Invoice.InvoiceNumber</h3>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="@Model.Invoice.Id" />
            <div class="form-group">
                <select accesskey="form-control" id="assignItems-dropDownList" asp-for="CallOffItemsIDS"
                        asp-items="@Model.CallOffItems" multiple class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#assignItems-dropDownList').multiSelect();
        });
    </script>

}